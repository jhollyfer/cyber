{
  "name": "cyberguardian-backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "node --import @swc-node/register/esm-register --watch bin/server.ts",
    "start": "node ./build/bin/server.js",
    "build": "tsc -b && tsup",
    "lint": "prettier --write . && eslint . --ext .ts --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:unit": "vitest --config vitest.config.ts",
    "test:e2e": "vitest --config vitest.e2e.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:all": "vitest run --config vitest.config.ts && vitest run --config vitest.e2e.config.ts",
    "test:ui": "vitest --ui"
  },
  "prisma": {
    "seed": "tsx prisma/seeders/main.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@faker-js/faker": "^9.3.0",
    "@swc-node/register": "^1.11.1",
    "@swc/core": "^1.15.8",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "eslint": "^9.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^4.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.0",
    "globals": "^16.0.0",
    "prettier": "^3.5.0",
    "prisma": "^7.0.1",
    "supertest": "^7.0.0",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.0.0",
    "unplugin-swc": "^1.5.0",
    "vite-tsconfig-paths": "^5.1.0",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.1",
    "@scalar/fastify-api-reference": "^1.40.0",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "fastify-decorators": "^3.16.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "zod": "^4.1.13"
  }
}
